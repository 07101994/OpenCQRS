<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <PackageId>OpenCqrs.Store.CosmosDB.MongoDB</PackageId>
    <Authors>Luca Briguglia</Authors>
    <Company>Weapsy</Company>
    <Product>OpenCqrs</Product>
    <Description>CosmosDB (MongoDB) database provider for OpenCqrs event store.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseUrl>https://github.com/Weapsy/OpenCqrs/blob/master/LICENSE</PackageLicenseUrl>
    <Copyright>Copyright Luca Briguglia</Copyright>
    <PackageProjectUrl>https://github.com/Weapsy/OpenCqrs</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Weapsy/OpenCqrs</RepositoryUrl>
    <PackageTags>.net, core, mediator, ddd, cqrs, event sourcing, cosmosdb, mongodb</PackageTags>
    <Version>4.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.1.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="2.1.0" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="2.1.0" />
    <PackageReference Include="MongoDB.Driver" Version="2.6.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\OpenCqrs\OpenCqrs.csproj" />
  </ItemGroup>

</Project>
